{
  "name": "unimem",
  "version": "1.0.0",
  "description": "Universal AI CLI Memory Service - persistent memory across Claude Code, Gemini CLI, Codex, Copilot, Cursor, and Aider",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "unimem": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "tsx src/index.ts",
    "cli": "tsx src/cli/index.ts",
    "worker": "tsx src/server/http-server.ts",
    "test": "tsx --test src/**/*.test.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "memory",
    "ai",
    "cli",
    "claude",
    "gemini",
    "codex",
    "copilot"
  ],
  "author": "Akanksha Gupta",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^11.7.0",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "zod": "^3.23.0"
  }
}
